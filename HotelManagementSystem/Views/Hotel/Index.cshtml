@model IEnumerable<HotelManagementSystem.Models.Hotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 bg-light">
    <h2>Room List</h2>
    @if (ViewBag.Message != null)
    {

        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country.CountryName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.HotelId }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.HotelId }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.HotelId })
                </td>
            </tr>
        }

    </table>
</div>