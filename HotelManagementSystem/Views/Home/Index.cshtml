    <div class="row">
        <div class="col-sm-3">
            <div class="card">
                <img class="card-img-top" src="~/Template/images/gallery_1.jpg" alt="Card image cap">
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <img class="card-img-top" src="~/Template/images/gallery_2.jpg" alt="Card image cap">
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card">
                    <img class="card-img-top" src="~/Template/images/gallery_3.jpg" alt="Card image cap">
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card">
                    <img class="card-img-top" src="~/Template/images/gallery_4.jpg" alt="Card image cap">
                </div>
            </div>
        </div>
    </div>
</div><br />
